<br>
</div>

<!-- WOULD BE COOL TO HAVE "YOUR VOTE" AND "OTHER VOTES" AS COLUMNS NEXT TO EACHOTHER -->
<!-- YOUR VOTE -->
<h2>Hero or Villan?  Vote your voice.</h2>

<form action="/reviews/create">
  <input name="brand_id" value=<%= @brand.id %> type="hidden">
  <div class="form-group">
    <select name="vote">
      <option value="1">Hero</option>
      <option value="-1">Villan</option>
    </select>
  </div>
  <div class="form-group">
    <textarea name="comment" class="form-control input-md" rows="5" placeholder="In your own words, why is <%= @brand.brand_name %> a Hero or a Villan?" ></textarea>
  </div>
  <input type="submit" class="btn btn-md btn-success" value="Submit My Vote">
</form>


<!-- OTHERS REVIEWS -->
<% if @reviews.count > 0 %>
<h2>What Other People Said:</h2>
  <div class ="col-md-5 herobox">
    <p><strong>Hero Votes:</strong> <%= @reviews.sum(:hero_vote) %></p>
    <p><strong><%= @brand.brand_name %> is a Hero because...</strong></p>
      <% @reviews_hero.each do |review_hero| %>
      <!-- <p><%#= User.find_by(:user_id => review.user_id) %><#% if u.present %> says:</p> -->
      <p><%= review_hero.comment %></p>
    <% end %>
  </div>

  <div class ="col-md-5 villanbox">
    <p><strong>Villan Votes:</strong> <%= @reviews.sum(:villan_vote) %></p>
    <p><strong><%= @brand.brand_name %> is a Villan because...</strong></p>
      <% @reviews_villan.each do |review_villan| %>
      <p><%= review_villan.comment %></p>
    <% end %>

  </div>


